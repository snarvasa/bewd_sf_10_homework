<%= form_for @article do |f| %>         <!-- calls the form helper method. For each article, do the stuff below -->

  <% if @article.errors.any? %>         <!--if there are any erros when creating the article, do the following-->
    <div id="error_explanation">        <!--Display an explanation of the error-->
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited     <!--Renders the number of errors-->
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>               <!--For each error, render the full error message-->
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
