<%= render 'header' %>

<h1>Hello, Rails!</h1>
<%= link_to 'My Blog', controller: 'articles' %>
<%= link_to 'New article', new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>       <!--For each article, do the thing below-->
    <tr>
      <td><%= article.title %></td>       <!--Render the title-->
      <td><%= article.text %></td>        <!--Render the text-->
      <td><%= link_to 'Show', article_path(article) %></td>     <!--Link to the article show page-->
      <td><%= link_to 'Edit', edit_article_path(article) %></td> <!--Edit the article-->
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>         <!--Delete the article and throw a confirmation modal-->
    </tr>
  <% end %>
</table>
